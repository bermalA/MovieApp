@{
    ViewData["Title"] = "Signup";
}
<div class="min-vh-100 min-mw-100 d-flex justify-content-center align-items-center">
    <div class="card text-center">
        <h3 class="mt-5">@ViewData["Title"]</h3>
        <form class="m-5">
            <div class="d-flex justify-content-center align-items-center flex-column gap-3">
                <div class="d-flex flex-column text-start" >
                    <label for="name" >Name</label>
                    <input type="text" id="name"/>
                </div>
                <div class="d-flex flex-column text-start" >
                    <label for="email">Email</label>
                    <input type="text" id="email" />
                </div>
                <div class="d-flex flex-column text-start" >
                    <label for="password">Password</label>
                    <input type="text" id="password" />
                </div>
                <div class="d-flex flex-column text-start" >
                    <label for="passagain">Password again</label>
                    <input id="passagain" />
                </div>
                <button>Login</button>
            </div>
        </form>
    </div>
</div>
</div>